//
// Layout
// =================================================


html, body { height: 100%; }

.container {
  position: relative;
  min-height: 100%;
  background: #f5f5f5;
}


// Header Section
// --------------------------------------------------
.header-inner {
  margin: 0 auto;
  padding: 100px 0 70px;
  width: $main-desktop;

  .one-column & { width: $content-desktop; }
  +desktop-large() {
    .one-column & { width: $content-desktop-large; }
  }
}

// Main Section
// --------------------------------------------------
.main { padding-bottom: $footer-height + $gap-between-main-and-footer; }
.main-inner {
  margin: 0 auto;
  width: $main-desktop;

  .one-column & { width: $content-desktop; }
  +desktop-large() {
    .one-column & { width: $content-desktop-large; }
  }

}

.main-inner article {
  padding: 20px; 
  box-shadow: 0px 0px 1px 1px lightgray;
  border-radius: 8px;
  background: #fff;
}

// Footer Section
// --------------------------------------------------
.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  min-height: $footer-height;
}
.footer-inner {
  margin: 20px auto;
  width: $main-desktop;

  .one-column & { width: $content-desktop; }
  +desktop-large() {
    .one-column & { width: $content-desktop-large; }
  }
}
